<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_app"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ashwin.hajeri.savedClassList.DetailClassList">

    <TextView
        android:id="@+id/tvClassType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_toEndOf="@+id/textView"
        android:gravity="center"
        android:text="Theory"
        android:textColor="@drawable/color_grno"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvClassName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvClassType"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:singleLine="false"
        android:text="TY B. Tech(2015-16)"
        android:textColor="#ffffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvClassName"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:labelFor="@+id/tvDivision"
        android:text="Division:"
        android:textColor="@drawable/color_other_details"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:gravity="center"
        android:text="99"
        android:textColor="#ffffffff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvStrength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvDivision"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="70"
        android:textColor="#ffffffff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvStrength"
        android:layout_toStartOf="@+id/tvStrength"
        android:gravity="center"
        android:labelFor="@+id/tvStrength"
        android:text="Strength:"
        android:textColor="@drawable/color_other_details"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvBatchLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:labelFor="@+id/tvBatch"
        android:text="Batch:"
        android:textColor="@drawable/color_other_details"
        android:textSize="25sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvBatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvBatchLable"
        android:layout_toEndOf="@+id/tvBatchLable"
        android:gravity="center"
        android:text="4"
        android:textColor="#ffffffff"
        android:textSize="25sp"
        android:visibility="invisible" />

</RelativeLayout>
