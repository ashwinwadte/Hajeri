<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ashwin.hajeri.attendance.AttendanceMain">

    <ListView
        android:id="@+id/lvStudentListAttendanceMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="-1dp"
        android:padding="5dp" />

    <RelativeLayout
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="No Data"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibAddStudentsAttendanceMain"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/my_oval"
            android:contentDescription="@string/title_activity_add_students"
            android:elevation="@dimen/fab_elevation"
            android:src="@drawable/ic_people_black_36dp"
            android:stateListAnimator="@animator/fab_anim"
            android:tint="@android:color/white" />
    </RelativeLayout>

</RelativeLayout>
